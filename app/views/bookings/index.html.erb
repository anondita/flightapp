

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Pnr</th>
      <th>Seats</th>
      <th>Seatclass</th>
      <th>Dateofjourney</th>
      <th>Source</th>
      <th>Destination</th>
      <th>User</th>
      <th>Flight</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.pnr %></td>
        <td><%= booking.seats %></td>
        <td><%= booking.seatclass %></td>
        <td><%= booking.dateofjourney %></td>
        <td><%= booking.source %></td>
        <td><%= booking.destination %></td>
        <td><%= booking.user.email %></td>
        <td><%= booking.flight.name %></td>
        <td><%= booking.totalprice %></td>
        <td><%= link_to 'Show', booking_path(booking.user,booking.flight,booking) %></td>
        <td><%#= link_to 'Upgrade', booking_upgrade_path(booking) %></td>
        <td><%= link_to 'Destroy', booking_path(booking.user,booking.flight,booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', flights_finder_path(current_user) %> |
<%= link_to 'Back', root_path %>
