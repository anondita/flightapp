

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Source</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Depart</th>
      <th>Arrive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.name %></td>
        <td><%= flight.source %></td>
        <td><%= flight.destination %></td>
        <td><%= dateformat(flight.dateofflight) %></td>
        <td><%= timeformat(flight.depart) %></td>
        <td><%= timeformat(flight.arrive) %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

