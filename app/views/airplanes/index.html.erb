

<h1>Airplanes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>First Seats</th>
      <th></th>
      <th>Business Seats</th>
      <th></th>
      <th>Economy Seats</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
      <tr>
        <td><%= airplane.name %></td>
        <td><%= airplane.typeofplane %></td>
        <td><center><%= (airplane.firstseat * airplane.firstrow) %></center></td>
        <td></td>
        <td><center><%= (airplane.busseat * airplane.busrow) %></center></td>
        <td></td>
        <td><center><%= (airplane.ecoseat * airplane.ecorow) %></center></td>
        <td><%= link_to 'Show', airplane %></td>
        <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
        <td><%= link_to 'Create Flight', airplane_flight_path(airplane) %></td>
        <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

